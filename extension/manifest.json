{
  "manifest_version": 3,
  "name": "Frontpage Submitter",
  "description": "Quickly share the current tab to frontpage.fyi via ATProto.",
  "version": "0.1.4",
  "author": "Frontpage Submitter Contributors",
  "homepage_url": "https://frontpage.fyi",
  "icons": {
    "16": "icons/icon-16.svg",
    "32": "icons/icon-32.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "32": "icons/icon-32.svg"
    },
    "default_title": "Post to Frontpage"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "frontpage-submitter@example.com",
      "strict_min_version": "109.0"
    }
  }
}
